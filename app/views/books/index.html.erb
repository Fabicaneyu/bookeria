
<table class="table table-striped">

  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Genre</th>
    <th>Year</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td><%= book.year %></td>
      <td><%= link_to 'Show book', book, class: "btn btn-outline-success" %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to new_book_path, class: 'btn btn-success' do %>
  <i class="fa fa-book"></i> New book
<% end %>